.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
}

.loading-spinner {
  width: 80rpx;
  height: 80rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #1890ff;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

.loading-text {
  color: #666;
  font-size: 28rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.container {
  padding: 20rpx;
  width: 100%;
  box-sizing: border-box;
  background-color: #f8f8f8;
}

.page-header {
  margin-bottom: 30rpx;
  text-align: center;
}

.page-title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
}

.page-description {
  display: block;
  font-size: 28rpx;
  color: #666;
  line-height: 1.4;
}

.grid-container {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 20rpx;
  width: 100%;
  margin-bottom: 30rpx;
}

.grid-item {
  background-color: #fff;
  border-radius: 8rpx;
  padding: 10rpx;
  min-height: 180rpx;
  box-shadow: 0 2rpx 6rpx rgba(0,0,0,0.1);
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.cell-number {
  font-size: 32rpx;
  font-family: 'DIN Condensed', -apple-system-font, sans-serif;
  font-weight: 700;
  color: #1890ff;
  text-align: left;
  background-color: #f0f7ff;
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
  margin-bottom: 8rpx;
  letter-spacing: 0.5px;
  text-transform: uppercase;
}

.picker-content {
  padding: 10rpx;
  background-color: #f9f9f9;
  border-radius: 4rpx;
  text-align: center;
  font-size: 28rpx;
  color: #333;
}

.picker-content.confirmed {
  background-color: #52c41a;
  color: #fff;
}

.wx-picker-view-column {
  text-align: center;
}

.picker-exclude {
  position: relative;
  padding: 10rpx;
  background-color: #f9f9f9;
  border-radius: 4rpx;
  text-align: center;
  font-size: 28rpx;
  color: #666;
}

.selected-numbers {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
  margin-top: 10rpx;
}

.selected-number {
  background-color: #1890ff;
  color: #fff;
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
  font-size: 24rpx;
}

.button-container {
  display: flex;
  gap: 20rpx;
  margin: 30rpx 0;
}

.calculate-btn {
  background-color: #1890ff;
  color: #fff;
  border-radius: 8rpx;
  flex: 1;
  font-size: 32rpx;
}

.test-btn {
  background-color: #52c41a;
  color: #fff;
  border-radius: 8rpx;
  flex: 1;
  font-size: 32rpx;
}

.result-grid {
  margin-top: 30rpx;
}

.probability-list {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.probability-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 6rpx;
  background-color: #f9f9f9;
  border-radius: 4rpx;
}

.probability-item .number {
  color: #1890ff;
  font-weight: bold;
  font-size: 28rpx;
}

.probability-item .probability {
  color: #666;
  font-size: 24rpx;
}
.series-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
  width: 100%;
  box-sizing: border-box;
  padding: 0;
}

.series-item {
  aspect-ratio: 1;
  background: #fff;
  border-radius: 12rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.15);
  overflow: hidden;
  position: relative;
  transform: translateZ(0);
  transition: all 0.3s ease;
}

.series-item:active {
  transform: scale(0.95);
  opacity: 0.8;
}

.series-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
  border-radius: 12rpx;
  transform: translateZ(0);
  will-change: transform;
}

.series-name {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  padding: 24rpx;
  font-size: 32rpx;
  font-weight: 600;
  font-family: 'PingFang SC', -apple-system-font, sans-serif;
  color: #FFFFFF;
  text-shadow: 0 2rpx 4rpx rgba(0,0,0,0.3);
  background: linear-gradient(to bottom, rgba(0,0,0,0.5), transparent);
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  z-index: 1;
}

.empty-state {
  background: linear-gradient(135deg, #f5f5f5, #e0e0e0);
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 12rpx;
  aspect-ratio: 1;
}

.empty-state-content {
  text-align: center;
  padding: 24rpx;
}

.empty-state-text {
  font-size: 32rpx;
  color: #999;
  font-weight: 500;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.series-item:active {
  opacity: 0.8;
}
